<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/search_result_item_margin"
    >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/search_result_item_padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/vehicle_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/search_result_item_title_font"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/search_result_item_vertical_gap"
            />

        <TextView
            android:id="@+id/vehicle_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/search_result_item_info_font"
            android:layout_marginBottom="@dimen/search_result_item_vertical_gap"
            />

        <TextView
            android:id="@+id/vehicle_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/search_result_item_info_font"
            android:layout_marginBottom="@dimen/search_result_item_vertical_gap"
            />

        <TextView
            android:id="@+id/vehicle_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/search_result_item_price_font"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>
